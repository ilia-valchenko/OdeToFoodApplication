@model OdeToFoodApplication.DetailModel
@{
    ViewData["Title"] = "Detail";
}

@if (!string.IsNullOrWhiteSpace(Model.SuccessfullySavedMessage))
{
    <div class="alert alert-info">
        @Model.SuccessfullySavedMessage
    </div>
}

<h2>@Model.Restaurant.Name</h2>
<div>
    <p>Id: @Model.Restaurant.Id</p>
    <p>Location: @Model.Restaurant.Location</p>
    <p>Cuisine: @Model.Restaurant.Cuisine</p>
</div>

<a asp-page="./List" class="btn btn-info">All restaurants</a>