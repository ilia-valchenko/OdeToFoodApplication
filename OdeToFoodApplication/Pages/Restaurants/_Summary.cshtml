@using OdeToFood.Core.Entities;
@model Restaurant

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Name</h3>
    </div>

    <div class="panel-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>

    <div class="panel-footer">
        <!--You can use 'asp-route-' + yourParameter to pass a value.-->
        <a asp-page="./Detail" asp-route-restaurantId="@Model.Id" class="btn btn-info">Detail</a>
        <a asp-page="./Edit" asp-route-restaurantId="@Model.Id" class="btn btn-info">Edit</a>
        <a asp-page="./Delete" asp-route-restaurantId="@Model.Id" class="btn btn-danger">Delete</a>
    </div>
</div>